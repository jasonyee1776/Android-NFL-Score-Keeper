<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66b032"
    android:orientation="vertical"
    tools:context="com.example.android.nflscorekeeper.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            />
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/line1"
            android:layout_marginTop="80dp"
            android:background="#ffffff"
            />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/line2"
            android:layout_marginTop="80dp"
            android:background="#ffffff"

            />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/line3"
            android:layout_marginTop="80dp"
            android:background="#ffffff"

            />
        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/line4"
            android:layout_marginTop="80dp"
            android:background="#ffffff"

            />

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/line5"
            android:layout_marginTop="80dp"
            android:background="#ffffff"
            />

        <View
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/line6"
            android:layout_marginTop="80dp"
            android:background="#ffffff"
            />
        <View
            android:id="@+id/line8"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/line7"
            android:layout_marginTop="80dp"
            android:background="#ffffff"
            />


        <ImageView
            android:id="@+id/football"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/football"
            android:visibility="visible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Team A"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/score_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="0"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:textColor="#eadedb"
                    android:textSize="76sp"/>

                <Button
                    android:id="@+id/touchdown_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#996600"
                    android:onClick="sixPointsA"
                    android:text="TD!!!!"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/one_point_conversion_a"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:background="#996600"
                    android:onClick="onePointA"
                    android:text="+1"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/two_point_conversion_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:background="#996600"
                    android:onClick="twoPointsA"
                    android:text="+2"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    />
                <Button
                    android:id="@+id/fieldgoal_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:background="#996600"
                    android:onClick="threePointsA"
                    android:text="Field Goal"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    />
                <Button
                    android:id="@+id/saftey_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:onClick="safetyA"
                    android:text="Safety -2"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Team B"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/score_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="0"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:textColor="#eadedb"
                    android:textSize="76sp"/>

                <Button
                    android:id="@+id/touchdown_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#996600"
                    android:onClick="sixPointsB"
                    android:text="TD!!!!"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/one_point_conversion_b"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:background="#996600"
                    android:onClick="onePointB"
                    android:text="+1"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/two_point_conversion_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:background="#996600"
                    android:onClick="twoPointsB"
                    android:text="+2"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    />
                <Button
                    android:id="@+id/fieldgoal_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:background="#996600"
                    android:onClick="threePointsB"
                    android:text="Field Goal"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    />
                <Button
                    android:id="@+id/saftey_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:onClick="safetyB"
                    android:text="Safety -2"
                    android:textSize="16sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="noScore"
            android:text="Reset"
            />


    </RelativeLayout>

</LinearLayout>
